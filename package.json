{
  "name": "postcss-resize",
  "version": "0.0.0",
  "description": "PostCSS plugin for generating resized images from full size assets based on the filenames used as background URLs",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "image",
    "resize",
    "background"
  ],
  "author": "Romaric Pascal <hello@romaricpascal.is>",
  "license": "MIT",
  "repository": "rhumaric/postcss-resize",
  "bugs": {
    "url": "https://github.com/rhumaric/postcss-resize/issues"
  },
  "homepage": "https://github.com/rhumaric/postcss-resize",
  "dependencies": {
    "calipers": "^2.0.0",
    "calipers-gif": "^2.0.0",
    "calipers-jpeg": "^2.0.0",
    "calipers-png": "^2.0.0",
    "postcss": "^6.0.1",
    "sharp": "^0.18.2"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.19.0",
    "eslint-config-postcss": "^2.0.2",
    "jest": "^20.0.0",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "test": "jest && eslint *.js",
    "dev:test": "chokidar 'tests/**/*.js' 'lib/*' -c 'jest' --initial "
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss/es5",
    "env": {
      "jest": true
    }
  }
}
